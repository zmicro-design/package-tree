#!/bin/bash

export PACKAGE_NAME="tree"
import "$ZMICRO_PACKAGES_PATH/$PACKAGE_NAME/config"
import "$ZMICRO_PACKAGES_PATH/$PACKAGE_NAME/core"

help() {
  echo "Usage:"
  echo "  zmicro tree <args ...>"
  echo ""

  tree --help
}

version() {
  tree --version
}

core() {
  # context directory
  local context="$ZMICRO_PACKAGES_DATA_PATH/tree"
  if [ ! -d "$context" ]; then
    mkdir -p $context
  fi
  cd $context
  # context directory

  case $1 in
  -h | --help | help)
    help
    ;;
  -v | --version | version)
    version
    ;;
  *)
    tree "$@"
    ;;
  esac
}

run() {
  core "$@"
}

run "$@"
